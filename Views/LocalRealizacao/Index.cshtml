@model IEnumerable<ProjetoFinalHeloisa.Models.LocalRealizacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Local da Realização</h1>

<p>
    <a asp-action="Create" class="linha">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocalNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Cidade.CidadeNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="button">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="button">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="button">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
